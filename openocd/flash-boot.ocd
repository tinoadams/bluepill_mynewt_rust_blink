# This is an OpenOCD script that connects to the STM32 Blue Pill and flashes the Bootloader ROM.

reset halt
echo "Flashing Bootloader..."
flash write_image erase unlock mynewt/bin/targets/mcu_boot/app/boot/mynewt/mynewt.elf.bin 0x08000000
flash verify_bank 0            mynewt/bin/targets/mcu_boot/app/boot/mynewt/mynewt.elf.bin 0
echo ""

echo "Restarting and halting..."
reset halt
